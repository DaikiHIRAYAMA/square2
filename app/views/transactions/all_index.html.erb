

    <h1>貸し借り一覧</h1>
  
    <% @transactions.records.each do |transaction| %>
    
    <% @transaction = Transaction.find(transaction.id)%>
    <%  @records = @transaction.records.order(:updated_at) %>

    <% @records.each do |record| %>

<div class="content">
      <div>
      期日：<%= record.time_limit.strftime("%Y-%m-%d") %>
      </div>
      <div>
      契約日：<%= record.start_time.strftime("%Y-%m-%d")  %>
      </div>
      <div>
      概要：<%= record.description %>
      </div>



<% if record.user == current_user %>

    <% if record.current_situation == "rend" %>
    <h4>貸しているもの:<%= record.item_name %></h4>
    <h4>貸している相手：<%= transaction.target_user(current_user).name %></h4>

    <h4>催促する</h4>
    

    <% elsif record.current_situation == "borrow" %>
    <h4>借りているもの:<%= record.item_name %></h4>
    <h4>借りている相手：<%= transaction.target_user(current_user).name %></h4>
    

    <h4>返却する</h4>


    <% else %>
    <h4>貸し借りしていたもの:<%= record.item_name %></h4>
    <h4>貸し借りしていた相手：<%= transaction.target_user(current_user).name %></h4>
    <h4>現在の貸し借りはありません。</h4>

    <% end %>

<% else %>

    <% if record.current_situation == "rend" %>
    <h4>借りているもの:<%= record.item_name %></h4>
    <h4>借りている相手：<%= transaction.target_user(current_user).name %></h4>

    <h4>返却する</h4>


    <% elsif record.current_situation == "borrow" %>
    <h4>貸しているもの:<%= record.item_name %></h4>
    <h4>貸している相手：<%= transaction.target_user(current_user).name %></h4>

    <h4>催促する</h4>

    <% else %>
    <h4>貸し借りしていたもの:<%= record.item_name %></h4>
    <h4>貸し借りしていた相手：<%= transaction.target_user(current_user).name %></h4>
    <h4>現在の貸し借りはありません。</h4>

    <% end %>
<% end %>




















 
